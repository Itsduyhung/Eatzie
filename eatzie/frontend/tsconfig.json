{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["tamagui"],

    "paths": {
      "@/*": ["./*"],
      "components/*": ["./components/*"],
      "utils/*": ["./utils/*"],
      "tamagui.config": ["./tamagui.config.ts"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "tamagui.config.ts"
  ]
}
